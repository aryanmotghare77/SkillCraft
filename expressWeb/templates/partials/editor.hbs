<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">

    <div class="container mx-auto mt-10">
        <h1 class="text-3xl font-bold text-center mb-6">HTML Code Editor</h1>
        <div class="flex flex-col md:flex-row space-y-4 md:space-y-0 md:space-x-4">
            <!-- Text Area for HTML Code -->
            <div class="flex-1">
                <label for="editor" class="block text-lg font-medium mb-2">Write Your HTML Code:</label>
                <textarea id="editor" rows="10" class="w-full p-4 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring focus:ring-blue-300" placeholder="Write your HTML code here...">&lt;h1&gt;Hello World!&lt;/h1&gt;</textarea>
            </div>

            <!-- Output Area -->
            <div class="flex-1">
                <label class="block text-lg font-medium mb-2">Preview:</label>
                <div id="output" class="bg-gray-100 border border-gray-300 rounded-lg p-4 h-60 w-30 overflow-y-auto bg-white shadow-sm"></div>
            </div>
        </div>

        <!-- Button to Run Code -->
        <div class="flex justify-center mt-4">
            <button id="run-button" class="bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-500 focus:outline-none">Run Code</button>
            <button id="clear-button" class="ml-3 bg-red-600 text-white py-2 px-4 rounded-lg hover:bg-blue-500 focus:outline-none">Clear Code</button>
        </div>
    </div>


    <script>
        // JavaScript to render the HTML code
        document.getElementById('run-button').addEventListener('click', function () {
            const editorContent = document.getElementById('editor').value;
            const output = document.getElementById('output');
            output.innerHTML = editorContent;
        });
           document.getElementById('clear-button').addEventListener('click', function () {
             document.getElementById('editor').value=' ';
        });
    </script>

</body>

</html>
