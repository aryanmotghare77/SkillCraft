    <script>
        const menuButton = document.getElementById('menu-button');
        const menu = document.getElementById('menu');

        menuButton.addEventListener('click', () => {
            menu.classList.toggle('hidden');
        });
        const form = document.getElementById('comment-form');
        const commentInput = document.getElementById('comment-input');
        const commentList = document.getElementById('comment-list');
        let editIndex = null;

        form.addEventListener('submit', function(event) {
            // alert("Thank for your Comment")
            event.preventDefault(); // Prevent form submission

            const commentText = commentInput.value.trim();
            if (commentText) {
                if (editIndex !== null) {
                    // Edit existing comment
                    const listItem = commentList.children[editIndex];
                    listItem.querySelector('.comment-text').textContent = commentText;
                    editIndex = null; // Reset edit index
                } else {
                    // Create a new list item for the comment
                    const listItem = document.createElement('li');
                    listItem.className = "flex justify-between items-center bg-gray-100 border border-gray-300 p-3 rounded-lg";
                    listItem.innerHTML = `
                        <span class="comment-text">${commentText}</span>
                        <div class="space-x-2">
                            <button class="edit-button bg-yellow-500 text-white px-2 py-1 rounded-lg hover:bg-yellow-600">Edit</button>
                            <button class="delete-button bg-red-500 text-white px-2 py-1 rounded-lg hover:bg-red-600">Delete</button>
                        </div>
                    `;
                    commentList.appendChild(listItem);
                }
                // Clear the input field
                commentInput.value = '';
            }
        });

        // Event delegation for edit and delete buttons
        commentList.addEventListener('click', function(event) {
           
            if (event.target.classList.contains('delete-button')) {
                const listItem = event.target.closest('li');
                commentList.removeChild(listItem);
            } else if (event.target.classList.contains('edit-button')) {
                const listItem = event.target.closest('li');
                commentInput.value = listItem.querySelector('.comment-text').textContent;
                editIndex = Array.from(commentList.children).indexOf(listItem);
            }
        });
        const stars = document.querySelectorAll('#rating-stars span');
        const ratingDisplay = document.getElementById('rating-display');

        stars.forEach(star => {
            star.addEventListener('click', () => {
                const rating = star.getAttribute('data-value');
                ratingDisplay.textContent = rating;
                updateStarStyles(rating);
            });
        });

        function updateStarStyles(selectedRating) {
            stars.forEach(star => {
                if (star.getAttribute('data-value') <= selectedRating) {
                    star.classList.add('text-yellow-500');
                    star.classList.remove('text-gray-400');
                } else {
                    star.classList.remove('text-yellow-500');
                    star.classList.add('text-gray-400');
                }
            });
        }
            </script>
